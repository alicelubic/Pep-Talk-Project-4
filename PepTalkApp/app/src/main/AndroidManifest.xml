<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="owlslubic.peptalkapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".views.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.PepTalkListActivity"
            android:parentActivityName=".views.MainActivity"/>
        <activity android:name=".views.ChecklistActivity"
            android:parentActivityName=".views.MainActivity"/>

        <activity android:name=".views.SignUpActivity"
            android:parentActivityName=".views.MainActivity"/>

        <!--widget business-->
        <receiver android:name=".presenters.MyWidgetProvider"
            android:label="Pep Talk Widget"
            android:icon="@drawable/ic_menu_hamburger_24dp">
            <intent-filter>
                <action
                    android:name="android.appwidget.action.APPWIDGET_UPDATE"/>

            </intent-filter>

            <meta-data android:name="android.appwidget.provider"
                android:resource="@xml/widget_info"/>

        </receiver>


    </application>

</manifest>