<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/myPrimaryLightBlue</item>
        <item name="colorPrimaryDark">@color/mySecondaryBlue</item>
        <item name="colorAccent">@color/myAccentBlue</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="NavigationDrawerStyle">
        <item name="android:textSize">14sp</item><!-- text size in menu-->
        <item name="android:listPreferredItemHeightSmall">40dp</item><!-- item size in menu-->
    </style>


    <style name="app_font" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#fafafa</item>
        <item name="android:textSize">16sp</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="app_font.Gray">
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="edit_text_font" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColorHint">#fafafa</item>
        <item name="android:textSize">18sp</item>
        <item name="android:typeface">normal</item>
    </style>


    <!--from the 3rd party fab library-->

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="PepTalkTheme" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="colorPrimaryDark">@color/mySecondaryBlue</item>
        <item name="colorPrimary">@color/myPrimaryLightBlue</item>
        <item name="colorAccent">@color/myAccentBlue</item>
        <item name="android:textColor">#fafafa</item>
        <item name="android:textSize">20sp</item>
        <item name="android:typeface">serif</item>
    </style>

</resources>
