<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">-->
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/myPrimaryLightBlue</item>
        <item name="colorPrimaryDark">@color/mySecondaryBlue</item>
        <item name="colorAccent">@color/myAccentBlue</item>

        <item name="colorControlNormal">@color/white</item>
        <!--<item name="colorControlNormal">@color/mySecondaryBlue</item>-->
        <item name="colorControlActivated">@color/myAccentBlue</item>
        <item name="colorControlHighlight">@color/mySecondaryBlue</item>

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/myPrimaryLightBlue</item>
        <item name="android:windowTranslucentStatus">true</item>

    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="NavigationDrawerStyle">
        <item name="android:textSize">14sp</item><!-- text size in menu-->
        <item name="android:listPreferredItemHeightSmall">40dp</item><!-- item size in menu-->
    </style>


    <style name="app_font" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#fafafa</item>
        <item name="android:textSize">16sp</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="app_font.Gray">
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="app_font.Blue">
        <item name="android:textColor">@color/myPrimaryLightBlue</item>
    </style>

    <style name="my_edit_text" parent="@android:style/Widget.EditText">
        <item name="android:textColorHint">@color/white</item>
        <item name="android:background">@color/white</item>
        <item name="android:padding">6dp</item>
        <!--<item name="app:hintTextAppearance=">@style/app_font.Blue"</item>-->
        <item name="android:textSize">20sp</item>
        <!--<item name="textColor">@color/white</item>-->
        <item name="android:alpha">0.8</item>

    </style>

    <style name="frag_button" parent="@android:style/Widget.ImageButton">
        <item name="android:layout_margin">6dp</item>
        <item name="android:backgroundTint">@color/myPrimaryLightBlue</item>
        <item name="android:paddingBottom">30dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>


    <!--from the 3rd party fab library-->
    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:typeface">normal</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="PepTalkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/mySecondaryBlue</item>
        <item name="colorPrimary">@color/myPrimaryLightBlue</item>
        <item name="colorAccent">@color/myAccentBlue</item>
        <item name="android:textColor">#fafafa</item>
        <item name="android:textSize">20sp</item>
        <item name="android:typeface">serif</item>
    </style>

</resources>
