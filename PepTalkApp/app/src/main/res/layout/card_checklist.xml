<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_checklist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stateListAnimator="@anim/raise"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="3dp"
        card_view:cardBackgroundColor="@color/card_background_dark">

        <!--state list animator kinda works but not really idk-->

        <TextView
            android:id="@+id/textview_checklist_item"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:layout_margin="6dp"
            android:text="Checklist Item"
            style="@style/CodeFont"/>

        <CheckBox
            android:id="@+id/checkbox_checklist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            style="@style/checkbox"
            android:layout_gravity="end|center_vertical"/>




    </android.support.v7.widget.CardView>


</LinearLayout>