<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/coordinator_layout_main_activity"
    android:background="@color/mySecondaryBlue">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

    <TextView
        style="@style/CodeFont"
        android:text="Need a pep talk?"
        android:layout_gravity="center"
        android:layout_marginBottom="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        style="@style/CodeFont"
        android:text="tap below"
        android:textSize="14sp"
        android:layout_gravity="center"
        android:layout_marginBottom="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageButton
        android:id="@+id/imagebutton_main"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:src="@mipmap/ic_launcher_big"
        android:layout_gravity="center"
        android:background="@color/mySecondaryBlue"/>

    </LinearLayout>


    <include layout="@layout/content_bottom_sheet" />


</android.support.design.widget.CoordinatorLayout>
