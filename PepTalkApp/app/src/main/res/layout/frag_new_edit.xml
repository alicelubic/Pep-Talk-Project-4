<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/myPrimaryLightBlue"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <EditText
            android:id="@+id/edittext_fragment_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/CodeFont"/>

        <EditText
            android:id="@+id/edittext_fragment_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/CodeFont"/>

    </LinearLayout>

    <ImageButton
        android:id="@+id/imagebutton_fragment_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_check_white_24dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/myPrimaryLightBlue"
        android:padding="16dp"/>

    <ImageButton
        android:id="@+id/imagebutton_fragment_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_clear_white_24dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/myPrimaryLightBlue"
        android:padding="16dp"/>

</RelativeLayout>