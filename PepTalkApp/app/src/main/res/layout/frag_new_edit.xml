<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/myPrimaryLightBlue"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/edittext_fragment_title"
        style="@style/CodeFont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edittext_fragment_body"
        style="@style/CodeFont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/imagebutton_fragment_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:backgroundTint="@color/myPrimaryLightBlue"
            android:paddingBottom="30dp"
            android:paddingEnd="16dp"
            android:src="@drawable/ic_check_white_24dp" />

        <ImageButton
            android:id="@+id/imagebutton_fragment_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:backgroundTint="@color/myPrimaryLightBlue"
            android:paddingBottom="30dp"
            android:paddingStart="16dp"
            android:src="@drawable/ic_clear_white_24dp" />

    </RelativeLayout>
</LinearLayout>