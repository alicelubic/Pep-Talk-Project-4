<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="400dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="16dp"
        card_view:cardBackgroundColor="@color/card_background_dark"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/button_frag_edit_peptalk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/card_background_dark"
                android:src="@drawable/ic_mode_edit_white_24dp"
                android:layout_alignParentRight="true" />

            <TextView
                android:id="@+id/textview_frag_title"
                style="@style/CodeFont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/button_frag_edit_peptalk"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textview_frag_body"
                style="@style/CodeFont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textview_frag_title"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:scrollbars="vertical" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>